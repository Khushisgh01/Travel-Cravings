<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TravelCravings</title>
    <link rel="stylesheet" href="/css/edit.css">
</head>
<body>
    <h1>Edit your Listing</h1>

    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" >

        <div >
            <input name="listing[title]" value="<%=listing.title%>" type="text" required>
        </div>

        <div >
            <textarea name="listing[description] "rows="4"><%=listing.description%> </textarea>
        </div>

        <div>
            <input name="listing[image][url]" value="<%=listing.image.url%>" type="text">
        </div>

        <div>
            <input name="listing[price]" value="<%=listing.price%>" type="number" step="0.01" required>
        </div>

        <div>
            <input name="listing[location]" value="<%=listing.location%>" type="text" required>
        </div>

        <div>
            <input name="listing[country]" placeholder=value="<%=listing.country%>" type="text" required>
        </div>

        <button type="submit">Edit Listing</button>
    </form>
</body>
</html>